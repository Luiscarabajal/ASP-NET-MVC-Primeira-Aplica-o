<html>
<head>
    <meta name="viewport" content="width=device-width,
initial-scale=1.0" charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/content/bootstrap.css")"
          rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="page-header bg-light">
                <h1>Sistema qualquer coisa</h1>
                <small class="text-danger">
                    Desenvolvido por Luis Mauricio
                </small>
            </div>
        </div>
    </div>

    <div class="col-xs-8 col-md-8  bg-dark">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <div class="collapse navbar-collapse">
                <ul class="navbar-nav text-lg-center">
                    <li class="nav-item" role="presentation">
                        @Html.ActionLink("Produtos", "Index", "Produtos")
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">      </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        @Html.ActionLink("Fabricantes", "Index", "Fabricantes")
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">      </a>
                    </li>
                    <li class="nav-item" role="presentation">
                        @Html.ActionLink("Categorias", "Index", "Categorias")
                    </li>
                </ul>
            </div>
        </nav>
    </div>

    <div class="col-xs-9 col-md-9">
        <br />
        @RenderBody()
    </div>

    <br />
    <div class="row">
        <div class="col-xs-12 col-md-12 bg-light">
            <center><small>Todos os direitos reservados</small></center>
        </div>
    </div>
    <script src="@Url.Content(
"~/scripts/jquery-1.10.2.js")"></script>
    <script src="@Url.Content(
"~/scripts/bootstrap.js")"></script>
    @RenderSection("ScriptPage", false);
</body>
</html>










